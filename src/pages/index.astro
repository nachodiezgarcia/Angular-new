---
import { getTrainings } from "@/api";
import Layout from "@/layout/layout.astro";

const trainings = await getTrainings();
---

<Layout title="Campus">
	<h1 class="text-gray-800 px-16 py-16 text-2xl">Cursos Disponibles</h1>
	<ul class="flex flex-col gap-4 items-center">
		{
			trainings.map((training) =>
				<li class="p-2 border rounded-[10px] w-[97vw] space-y-3">
					<h2 class="text-gray-800 text-xl font-bold">{ training.title }</h2>
					<p class="bg-[#CAE00F] text-amber-50 w-[99%] rounded-2xl p-2 mx-auto">{ training.overview }</p>
				</li>
			)
		}
	</ul>
</Layout>
